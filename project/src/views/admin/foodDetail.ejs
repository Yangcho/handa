<style>
  .main {
    flex-basis: 100%;
    flex-shrink: 1;
    flex-grow: 0;
  }
  .food-list {
    width: 100%;
  }
  .foot-list-table tbody tr:hover {
    cursor: pointer;
    background: #EEEEEE;
  }
  .food-detail .divider {
    height: 3px;
    background: black;
    margin-top: 1rem;
    margin-bottom: 1rem;
  }
  .food-detail .back-button {
    cursor: pointer;
    text-decoration: none;
    color: black;
  }
</style>

<main class="main m-5">

  <!-- 음식 상세 정보 -->
  <section class="food-detail card w-100" aria-label="Food Detail">
    
    <div class="card-body w-100">

      <!-- 머릿말 부분 -->
      <section class="mt-3 ms-3 d-flex justify-content-between">
        <h4 class=""><b>음식 상세</b></h4>
        <a class="back-button mt-2" onclick="onClickBackButton()"><b>| 뒤로가기</b></a>
      </section>
      <div class="divider"></div>

      <!-- 몸통 부분 -->
      <% if (error) { %>
      <p>해당 음식을 찾을 수 없습니다!</p>
      <% } else { %>
      <!-- 내용 영역 -->
      <section class="ms-3">
        <div class="d-flex">
          <div>
            <h5 class="mb-0"><b>음식코드: <%=food.fdCntntsNo%></b></h5>
            <h5><b><%=food.fdNm%></b></h5>
            <img
            width="400px"
            height="400px"
            src="/image/food/normal/<%=food.rtnStreFileNm%>"
            alt="음식"
            onerror="this.src='/image/no_image_available.jpg';">
          </div>
          <div class="ms-4 mt-4 d-flex flex-column">
            <p class="mb-0"><b>재료 정보</b></p>
            <p><%=food.matrlInfo%></p>
            <p class="mb-0"><b>조리 방법 정보</b></p>
            <% for (ckngMth of food.ckngMthInfo.split("\n")) { %>
              <p class="mb-0"><%=ckngMth%></p>
            <% } %>
          </div>
        </div>
      </section>

      <!-- 버튼 영역 -->
      <section class="d-flex justify-content-end">
        <button type="button" class="btn btn-secondary">수정하기</button>
        <button type="button" class="ms-3 btn btn-danger">삭제하기</button>
      </section>
      <% } %>
      
      </article>
    </div>

  </section>
</main>

<script>
  // 뒤로가기 버튼 눌렀을때
  function onClickBackButton() {
    let params = getQueryParams();
    window.location.href = "/admin/food" + toQueryString(params);
  }
</script>